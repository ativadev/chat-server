		"websocket",
		"socket.io",
		"chat",
		"app",
		"express",
		"node"
	],
	"dependencies": {
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-handlebars": "^6.0.3",
		"serve-favicon": "^2.5.0",
		"socket.io": "^4.4.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/express-serve-static-core": "^4.17.28",
		"@types/node": "^17.0.23",
		"cpx": "^1.5.0",
		"prettier": "^2.6.0",
		"run-script-os": "^1.1.6",
		"typescript": "^4.6.2"
	},
