{
	"name": "chat-server",
	"version": "1.0.0",
	"description": "Servidor de um app de chat, usando Socket.io",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"build-and-start": "npm run build && npm run start",
		"build": "run-script-os",
		"build:win32": "npm run build:copy && npm run build:tsc || VER>NUL",
		"build:darwin:linux": "npm run build:copy && npm run build:tsc || true",
		"build:copy": "npx cpx \"src/**/*.!(*ts)\" dist --verbose",
		"build:tsc": "npx tsc",
		"test": "echo \"Sem testes\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ativasuporte/chat-server.git"
	},
