{
	"name": "chat-server",
	"version": "1.0.0",
	"description": "Servidor de um app de chat, usando Socket.io",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"build-and-start": "npm run build && npm run start",
		"build": "run-script-os",
		"build:win32": "npm run build:copy && npm run build:tsc || VER>NUL && npm run build:webpack",
		"build:darwin:linux": "npm run build:copy && npm run build:tsc || true && npm run build:webpack",
		"build:copy": "npx cpx \"src/**/*.!(*ts|*tsx)\" dist --verbose",
		"build:tsc": "npx tsc",
		"build:jsx": "npx babel dist --out-dir dist --ignore **/*.js --presets @babel/preset-react",
		"build:webpack": "webpack build --config ./dist/config/webpack.config.js --stats verbose",
		"test": "echo \"Sem testes\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ativasuporte/chat-server.git"
	},
	"keywords": [
		"websocket",
		"socket.io",
		"chat",
		"app",
		"express",
		"node"
	],
	"dependencies": {
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-handlebars": "^6.0.3",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"serve-favicon": "^2.5.0",
		"socket.io": "^4.4.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.17.6",
		"@babel/preset-react": "^7.16.7",
		"@types/express": "^4.17.13",
		"@types/express-serve-static-core": "^4.17.28",
		"@types/node": "^17.0.23",
		"@types/react": "^17.0.43",
		"babel-loader": "^8.2.4",
		"cpx": "^1.5.0",
		"prettier": "^2.6.0",
		"run-script-os": "^1.1.6",
		"typescript": "^4.6.2",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"author": "jpricardo",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/ativasuporte/chat-server/issues"
	},
	"homepage": "https://github.com/ativasuporte/chat-server#readme"
}
